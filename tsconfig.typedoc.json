{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "skipLibCheck": true,
    "types": ["react", "react-dom"]
  },
  "include": ["lib"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "app",
    "node_modules",
    "dist"
  ]
}
